        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        /* Top navbar - smaller and black */
        .top-navbar {
            background-color: #000;
            color: #fff;
            padding: 5px 0;
        }

        .top-navbar-container {
            display: flex;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .top-navbar a {
            color: #fff;
            text-decoration: none;
            font-size: 12px;
            transition: color 0.3s ease;
        }
        
        .top-navbar a:hover {
            color: #00a0e9;
        }

        .top-navbar i {
            color: #00a0e9;
            margin-right: 5px;
        }

        .top-right {
            display: flex;
            gap: 20px;
        }

        /* Main header - Adding space below search bar */
        .main-header {
            background-color: #000;
            padding: 25px 0; /* Increased padding for more space */
        }

        .header-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .logo {
            width: 180px;
        }

        .logo img {
            max-width: 100%;
        }

        .search-bar {
            flex-grow: 1;
            max-width: 700px;
            margin: 0 20px;
            position: relative;
        }

        .search-bar input {
            width: 100%;
            padding: 12px 20px;
            padding-bottom: 10px;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            background-color: #fff;
            color: #333;
        }
        
        .search-bar input::placeholder {
            color: #999;
        }

        .search-bar button {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #333;
        }

        .user-actions {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .user-actions a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .prijava {
            font-weight: bold;
            font-size: 12px;
        }
        
        .wishlist, .cart {
            font-size: 16px;
        }
        
        /* Navigation Menu - Full width */
        .nav-menu {
            background-color: #f2f2f2;
            border-bottom: 1px solid #ddd;
            width: 100%;
            margin-bottom: 0;
        }
        
        .nav-container {
            display: flex;
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            padding: 0;
            overflow-x: auto;
            justify-content: stretch; /* Makes items stretch to fill the container */
        }
        
        .nav-menu a {
            color: #333;
            text-decoration: none;
            padding: 15px 0; /* Remove horizontal padding */
            font-weight: bold;
            font-size: 13px;
            transition: background-color 0.3s;
            white-space: nowrap;
            margin: 0; /* Ensure no margins */
            text-align: center; /* Center text */
            flex: 1; /* Make each item take equal space */
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .nav-menu a:hover {
            background-color: #e5e5e5;
        }
        
        .nav-menu .sve-kategorije {
            background-color: #000000; /* Changed to black background */
            color: #ffffff; /* Changed text color to white for better readability */
            border: 1px solid #000; /* Changed border color to match background */
        }
        
        .nav-menu a:hover {
            background-color: #e5e5e5;
        }
        
        .nav-menu .sve-kategorije {
            background-color: #000000; /* Changed to black background */
            color: #ffffff; /* Changed text color to white for better readability */
            border: 1px solid #000; /* Changed border color to match background */
        }

        /* Slider Styles */
        .featured-section {
            max-width: 1200px;
            margin: 20px auto;
            display: flex;
            gap: 15px;
        }

        .main-slider {
            flex: 2;
            position: relative;
            background-color: white;
            overflow: hidden;
            height: 400px;
        }

        .slider-wrapper {
            display: flex;
            transition: transform 0.5s ease-in-out;
            height: 100%;
            width: 100%;
        }

        .slide {
            min-width: 100%;
            height: 100%;
            position: relative;
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .slider-controls {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
            z-index: 10;
        }

        .slider-btn {
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .slider-btn:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .prev-btn {
            margin-left: 10px;
        }

        .next-btn {
            margin-right: 10px;
        }

        .slider-dots {
            position: absolute;
            bottom: 20px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: center;
            gap: 8px;
            z-index: 5;
        }

        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.5);
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .dot.active {
            background-color: #fff;
        }

        .vivax-banner {
            flex: 1;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .vivax-banner img {
            max-width: 80%;
            max-height: 80%;
        }

        /* Categories Section - MODIFIED FOR 9 CARDS */
        .categories-section {
            max-width: 1200px;
            margin: 40px auto;
            position: relative;
        }
        
        .section-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 25px;
            color: #333;
            position: relative;
        }
        
        .section-title:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background-color: #00a0e9;
        }
        
        .categories-container {
            display: grid;
            grid-template-columns: repeat(9, 1fr); /* Changed from 6 to 9 columns */
            gap: 10px; /* Reduced gap from 20px to 10px */
            padding: 0 15px;
        }
        
        .category-card {
            background-color: white;
            border-radius: 10px;
            padding: 15px 10px; /* Reduced padding */
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }
        
        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }
        
        .category-icon {
            margin: 0 auto 10px; /* Reduced bottom margin */
            width: 60px; /* Reduced from 70px */
            height: 60px; /* Reduced from 70px */
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .category-icon img {
            max-width: 100%;
            max-height: 100%;
            transition: transform 0.3s ease;
        }
        
        .category-card:hover .category-icon img {
            transform: scale(1.1);
        }
        
        .category-card h3 {
            font-size: 12px; /* Reduced from 14px */
            color: #333;
            margin: 0;
            line-height: 1.3;
        }
        
        /* Product Listings Section - NEW */
        .product-section {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 15px;
        }
        
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .section-header h2 {
            font-size: 24px;
            color: #333;
            margin: 0;
        }
        
        .product-slider {
            position: relative;
            display: flex;
            align-items: center;
        }
        
        .product-container {
            display: flex;
            gap: 18px;
            overflow-x: auto;
            padding: 10px 0px; /* Povećan padding da strelice ne preklapaju proizvode */
            scrollbar-width: none; /* Firefox */
            scroll-behavior: smooth;
        }
        
        .product-container::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
}
        
        .product-card {
            flex: 0 0 calc(20% - 15px);
            min-width: 215px;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .product-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #00c7ff;
            color: white;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
        }
        
        .product-image {
            height: 180px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background-color: white;
        }
        
        .product-image img {
            max-width: 100%;
            max-height: 140px;
            object-fit: contain;
        }
        
        .product-info {
            padding: 15px;
        }
        
        .product-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 40px;
        }
        
        .product-sku {
            color: #777;
            font-size: 12px;
            margin-bottom: 10px;
        }
        
        .product-price-info {
            display: flex;
            flex-direction: column;
            margin-top: 10px;
        }
        
        .product-original-price {
            color: #777;
            font-size: 12px;
            text-decoration: line-through;
        }
        
        .product-price {
            font-size: 20px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        
        .add-to-cart {
            background-color: #ffcc00;
            color: #333;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            position: absolute;
            bottom: 15px;
            right: 15px;
            transition: background-color 0.3s;
        }
        
        .add-to-cart:hover {
            background-color: #e6b800;
        }
        
        .slider-arrows {
            display: flex;
            gap: 10px;
        }
        
        .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid #ddd;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
    z-index: 10;
}
        
.slider-arrow:hover {
    background-color: rgba(255, 255, 255, 1);
}
     

.prev-arrow {
    left: -50px; /* Pomera levu strelicu levo */
}

.next-arrow {
    right: -50px; /* Pomera desnu strelicu desno */
}
        /* Section Dots */
        .section-dots {
            display: flex;
            justify-content: center;
            gap: 5px;
            margin-top: 20px;
        }
        
        .section-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: #ccc;
            cursor: pointer;
        }
        
        .section-dot.active {
            background-color: #333;
        }
        
        /* Footer - NEW */
        .footer {
            background-color: #000;
            color: #fff;
            padding: 40px 0 20px;
            margin-top: 50px;
        }
        
        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }
        
        .footer-content {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            margin-bottom: 40px;
        }
        
        .footer-column h3 {
            font-size: 16px;
            margin-bottom: 20px;
            color: #fff;
            position: relative;
            padding-bottom: 10px;
        }
        
        .footer-column h3:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 30px;
            height: 2px;
            background-color: #00a0e9;
        }
        
        .footer-links {
            list-style: none;
        }
        
        .footer-links li {
            margin-bottom: 10px;
        }
        
        .footer-links a {
            color: #ccc;
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s;
        }
        
        .footer-links a:hover {
            color: #00a0e9;
        }
        
        .footer-contact {
            margin-bottom: 20px;
        }
        
        .contact-item {
            display: flex;
            gap: 10px;
            margin-bottom: 10px;
            color: #ccc;
            font-size: 14px;
        }
        
        .contact-item i {
            color: #00a0e9;
        }
        
        .footer-social {
            display: flex;
            gap: 15px;
        }
        
        .social-icon {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #333;
            border-radius: 50%;
            transition: all 0.3s;
        }
        
        .social-icon:hover {
            background-color: #00a0e9;
        }
        
        .social-icon i {
            color: #fff;
            font-size: 16px;
        }
        
        .footer-bottom {
            border-top: 1px solid #444;
            padding-top: 20px;
            text-align: center;
            font-size: 13px;
            color: #999;
        }
        
        .payment-methods {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }
        
        .payment-icon {
            background-color: #fff;
            border-radius: 4px;
            padding: 5px;
            width: 40px;
            height: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .categories-controls {
            display: none;
        }
        
        @media (max-width: 1200px) {
            .product-section {
                max-width: 950px;
            }
            .product-card {
                flex: 0 0 calc(25% - 15px);
            }
        }
        
        @media (max-width: 992px) {
            .footer-content {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .categories-container {
                grid-template-columns: repeat(6, 1fr); /* Changed from 3 to 6 for tablets */
            }
            
            .product-card {
                flex: 0 0 calc(33.33% - 15px);
            }
        }
        
        @media (max-width: 768px) {
            .featured-section {
                flex-direction: column;
            }
            
            .top-navbar-container, .header-container {
                flex-direction: column;
                gap: 10px;
            }
            
            .search-bar {
                margin: 15px 0;
                max-width: 100%;
            }
            
            .nav-container {
                justify-content: flex-start;
                overflow-x: auto;
            }
            
            .product-card {
                flex: 0 0 calc(50% - 10px);
            }
            
            .categories-container {
                display: flex;
                overflow-x: auto;
                scroll-snap-type: x mandatory;
                scroll-behavior: smooth;
                -webkit-overflow-scrolling: touch;
                scrollbar-width: none; /* Firefox */
                -ms-overflow-style: none; /* IE and Edge */
                grid-template-columns: repeat(3, 1fr); /* Changed back to 3 for mobile */
            }
            
            .categories-container::-webkit-scrollbar {
                display: none; /* Chrome, Safari and Opera */
            }
            
            .category-card {
                flex: 0 0 calc(50% - 20px);
                scroll-snap-align: start;
                margin-right: 20px;
            }
            
            .categories-controls {
                display: flex;
                justify-content: center;
                margin-top: 20px;
                gap: 15px;
            }
            
            .category-arrow {
                background-color: white;
                border: none;
                width: 40px;
                height: 40px;
                border-radius: 50%;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 16px;
                color: #333;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }
            
            .footer-content {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
