            <% } else { %>
                <a href="/prijava" class="prijava">
                    <i class="fas fa-user fa-lg"></i> PRIJAVA
                </a>
            <% } %>
            <a href="/korpa" class="cart">
                <i class="fas fa-shopping-cart fa-lg"></i>
            </a>
        </div>
        
        <!-- Mobile view - aligned in one row -->
        <div class="mobile-top-nav">
            <button class="hamburger-menu" id="hamburgerMenu">
                <span class="hamburger-icon"></span>
                <span class="hamburger-icon"></span>
                <span class="hamburger-icon"></span>
            </button>
            
            <a href="/" class="logo" id="kt">
                <img src="logo.png" alt="TEHNOMAX" style="max-width: 120px;">
            </a>
            
            <div class="user-actions">
                <% if (typeof session.user !== "undefined") { %>
                    <a href="/profil" class="prijavljen-korisnik" id="kt"> 
