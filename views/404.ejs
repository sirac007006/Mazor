<!-- Desktop navigation menu -->
<div class="nav-menu">
    <div class="nav-container">
        <a href="/svekategorije" class="sve-kategorije" id="sveKategorijeDesktop">SVE KATEGORIJE</a>
        <a href="/">POČETNA</a>
        <a href="/akcije">AKCIJE I POPUSTI</a>
        <a href="/kontakt">KONTAKT</a>
        <a href="/servisi">SERVISI</a>
    </div>
</div>

<!-- 404 Error Content -->
<div class="error-container">
    <div class="error-icon">
        <i class="fas fa-exclamation-circle"></i>
    </div>
    <h1 class="error-code">404</h1>
    <h2 class="error-title">Stranica nije pronađena</h2>
    <p class="error-description">Nažalost, stranica koju tražite ne postoji ili je premještena. Molimo provjerite da li je URL ispravan ili se vratite na početnu stranicu.</p>
    <a href="/" class="back-btn">Natrag na početnu</a>
</div>

