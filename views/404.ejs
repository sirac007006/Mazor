                <% } %>
                <a href="/korpa" class="cart" id="kt">
                    <i class="fas fa-shopping-cart fa-lg"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Mobile search bar in separate row below -->
    <div class="mobile-search-container" id="telefon">
        <div class="search-bar">
            <input type="text" placeholder="Pronađite proizvod, kategoriju ili brend...">
            <button><i class="fas fa-search"></i></button>
        </div>
    </div>
</div>

<!-- Add mobile navigation menu -->
<div class="mobile-nav" id="mobileNav">
    <div class="mobile-nav-header">
        <button id="closeMenu" class="close-menu">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <a href="/svekategorije" class="sve-kategorije"><i class="fas fa-bars"></i> SVE KATEGORIJE</a>
    <a href="/" class="mobile-nav-link"><i class="fas fa-home"></i> POČETNA</a>
    <a href="/akcije" class="mobile-nav-link"><i class="fas fa-tag"></i> AKCIJE I POPUSTI</a>
    <a href="/kontakt" class="mobile-nav-link"><i class="fas fa-envelope"></i> KONTAKT</a>
    <a href="/servisi" class="mobile-nav-link"><i class="fas fa-cog"></i> SERVISI</a>
</div>

<!-- Add mobile overlay for closing menu -->
